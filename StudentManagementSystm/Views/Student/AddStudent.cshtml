@model StudentManagementSystem.ViewModel.StudentVM
@{
    ViewData["Title"] = "AddStudent";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card mt-5">
                <div class="card-header bg-dark text-white">
                    <h3 class="text-center">Add Student</h3>
                </div>
                <div class="card-body">
                    <form method="post"  asp-action="AddStudent" asp-controller="Student">
                        <div class="mb-3">
                            <label for="Name" class="form-label text-dark">Name</label>
                            <input type="text" asp-for="Name" class="form-control" id="Name" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="Grade" class="form-label text-dark">Grade</label>
                            <input type="text" asp-for="Grade" class="form-control" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="RoleNumber" class="form-label text-dark">RoleNumber</label>
                            <input type="text" asp-for="RollNo" class="form-control" id="PhoneNumber" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="Address" class="form-label text-dark">Address</label>
                            <input type="text" asp-for="Address" class="form-control" id="Address" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="Sex" class="form-label text-dark">Sex</label>
                            <input type="text" asp-for="Sex" class="form-control" style="border-color: #000;" />
                        </div>
                        <div class="mb-3">
                            <label for="Faculty" class="form-label text-dark">Faculty</label>
                            <input type="text" asp-for="Faculty" class="form-control" style="border-color: #000;" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>